<div class="container">

<table class="table table-striped table-bordered table-hover table-condensed">
<tr class="info">
	<th>First Name</th>
	<th>Last Name</th>
	<th>Email</th>
	<th>Role</th>
	<th>Token</th>
	<th>Email Confirmed</th>
	<th>Action</th>
</tr>
<% @users.each do |user| %>
<tr>
	<td><%= user.first_name %></td>
	<td><%= user.last_name %></td>
	<td><%= user.email %></td>
	<td><%= user.role %></td>
	<td><%= user.confirm_token %></td>
	<td><%= user.email_confirmed %></td>
	<% if current_user && (current_user.editor? | current_user.admin?) %>
	<td><button class="btn btn-warning glyphicon glyphicon-edit"><%= link_to ' ', edit_user_path(user) %></button>
	<button class="btn btn-danger glyphicon glyphicon-trash"><%= link_to ' ', destroy_user_path(user), :confirm => 'Are you sure you want to delete user?', :method => :delete %></button></td>
</tr>
	<% end %>

</div>
<% end %>
</table>
</div>