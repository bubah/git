<div class="container">
<table class="table table-striped table-bordered table-hover table-condensed">
<tr class="info">
	<th>First Name</th>
	<th>Last Name</th>
	<th>Email</th>
	<th>Role</th>
	<th>Action</th>
</tr>
<% @users.each do |user| %>
<tr>
	<td><%= user.first_name %></td>
	<td><%= user.last_name %></td>
	<td><%= user.email %></td>
	<td><%= user.role %></td>
	<% if current_user && (current_user.editor? | current_user.admin?) %>
	<td><button class="btn btn-warning"><%= link_to 'Edit', edit_user_path(user) %></button>
	<button class="btn btn-danger"><%= link_to 'Delete', destroy_user_path(user), :confirm => 'Are you sure you want to delete user?', :method => :delete %></button></td>
</tr>
	<% end %>

</div>
<% end %>
</table>
</div>